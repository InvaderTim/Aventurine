    <div id="login">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.email_field :email, :class => "textfield", :placeholder => "email" %></div>
        <div><%= f.password_field :password, :class => "textfield", :placeholder => "password" %></div>

        <div><%= f.submit "LOGIN", :class => "submitbutton" %></div>
      <% end %>
       <!-- end login-->
    </div>
        <div id="signup">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div><%= f.text_field :displayName, :class => "textfield", :placeholder => "display name" %></div>
            <div><%= f.email_field :email, :class => "textfield", :placeholder => "email" %></div>
            <div><%= f.password_field :password, :class => "textfield", :placeholder => "password" %></div>
            <div><%= f.password_field :password_confirmation, :class => "textfield", :placeholder => "confirm password" %></div>

            <div><%= f.submit "SIGN UP", :class => "submitbutton" %></div>
          <% end %>
        </div>
